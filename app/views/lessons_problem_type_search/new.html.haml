- content_for :head do
  %title
    = "Find Problem Types for #{@current_lesson.title}"
  = stylesheet_link_tag "lessons", "problem_type", "math_display", "problem_type_search", "tags"

#lesson-header
  =render :partial => "lessons/lesson_header", :locals => { :lesson => @current_lesson }

#current-lesson-problem-type-search
  =render :partial => "lessons/current_lesson_short", :locals => { :current_lesson => @current_lesson }
  #problem-type-search-categories
    =render :partial => "subjects/problem_type_list_by_subject_and_category", :locals => { :subjects => @subjects }  
  #problem-type-search-tags
    =render :partial => "tags/problem_type_search_by_tags", :locals => { :tags => @tags }