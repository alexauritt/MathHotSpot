- content_for :head do
  %title
    = "Lesson Worksheet Builder: #{@lesson.title}"
  = stylesheet_link_tag "math_display", "problem_type", "worksheet_builder"


#worksheet-builder
  #title
    ="Lesson Worksheet Builder: #{@lesson.title}"
  =form_tag(worksheet_builder_path) do 
    .title
      = label "worksheet_builder[title]", "Title"
      = text_field_tag "worksheet_builder[title]", nil, :size => 80
    #problem-types-display
      -@problem_types.each do |pt|
        .problem-type
          .problem-type-title
            =pt.title
          .problem-levels-list
            = render :partial => "worksheet_builder/problem_level", :collection => pt.problem_levels
    #create-worksheet-button
      = submit_tag "Create Worksheet"