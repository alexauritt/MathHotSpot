- content_for :head do
  %title Edit Math Problem
  = stylesheet_link_tag "math_display", "problem_entry_form"
  = javascript_include_tag latex_generator_popup_url

%h1 Editing Math Problem
#problem_type_info
  Problem Type: 
  =link_to @math_problem.problem_type.title, problem_type_url(@math_problem.problem_type)

=link_to('Delete this Problem', math_problem_url(@math_problem), :confirm => 'Are you sure?', :method => :delete)
  
%h3 Current Display:
%b Question:
=display_mathml_question(@math_problem)
%b Answer:
=display_mathml_answer(@math_problem)

=render :partial => 'math_problems/form', :locals => { :math_problem => @math_problem }

=link_to 'Show', @math_problem
|
=link_to 'Menu', root_url