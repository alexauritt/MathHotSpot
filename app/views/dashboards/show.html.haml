- content_for :head do
  = stylesheet_link_tag "dashboard"
  = stylesheet_link_tag "lessons"

#dashboard-main-row
  .column#lessons-column
    = render :partial => 'my_lessons/my_lesson_list', :locals => { :lessons => @lessons }    
  .column#worksheets-column
    %h2 My Worksheets
    .dashboard-list#worksheets
      Coming Soon!
  
  .column#problem-types-column
    %h2 My Problem Types
    .dashboard-list#problem-types
      %ul
        - @problem_types.each do |problem_type|
          %li.problem-type
            =link_to problem_type.title, problem_type_path(problem_type)
      .new-item
        =link_to "Create a new ProblemType", new_problem_type_url 