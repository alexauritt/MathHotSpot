= form_for @instruction, :url => instructions_path(@lesson) do |f|
  - if @instruction.errors.any?
    .error_explanation
      %h2
        = pluralize(@instruction.errors.count, "error")
        prohibited this movie from being saved
      %ul
        - @instruction.errors.full_messages.each do |msg|
          %li
            = msg
  
  .field
    = f.label :description
    %br
    = f.text_area :description

  .actions
    = f.submit

