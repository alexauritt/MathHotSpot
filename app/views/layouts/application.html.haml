%html
  %head
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    %script{:type => "text/javascript", :src => "http://cdn.mathjax.org/mathjax/1.1-latest/MathJax.js?config=TeX-AMS-MML_HTMLorMML"}
    = javascript_include_tag("jquery.throbber.min.js")
    = csrf_meta_tag
    = yield :head
  %body
    = render :partial => "navigation"
    - if flash[:notice]
      %p.notice
        = flash[:notice]
    = yield