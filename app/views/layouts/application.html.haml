%html
  %head
    = javascript_include_tag :defaults
    = include_mathjax
    = javascript_include_tag("jquery.throbber.min.js")
    = stylesheet_link_tag("global")
    = csrf_meta_tag
    = yield :head
  %body
    = render :partial => "layouts/navigation"
    - if flash[:notice]
      %p.notice
        = flash[:notice]
    - if flash[:alert]
      %p.alert
        = flash[:alert]
    = yield