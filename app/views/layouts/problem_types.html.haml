%html
  %head
    = javascript_include_tag :defaults
    = javascript_include_tag("jquery-ui-1.8.13.custom.min.js")
    = include_mathjax    
    = stylesheet_link_tag("global")
    = csrf_meta_tag
    = yield :head
  %body
    = render :partial => "layouts/navigation"
    - if flash[:notice]
      %p.notice
        = flash[:notice]
    = yield