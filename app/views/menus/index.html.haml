- content_for :head do
  %title Math Problems Menu
  = stylesheet_link_tag "admin/math_problems"

#container
  #subject_list
    %h2 ProblemTypes by Subject/Category
    - @subjects.each do |subject|
      .subject
        = subject.title
        = render :partial => "categories/index_with_problem_types", :locals => {:subject => subject}

  #lessons-and-worksheets
    %h2 
      =link_to "My Lessons and Worksheets", lessons_path
  #new_problem
    %h2
      =link_to "Create a New Problem Type", new_problem_type_path

  #tag_section
    %h2 Search by Tags
    #tag_list
      - @tags.each do |tag|
        =link_to "<span class='tag'>#{tag.name}</span>".html_safe, {:controller => "menus", :action => "tag_menu", :tag => "#{tag.name.downcase}"}
  #menu
    = form_tag problem_types_url, :method => 'get' do
      %p
        = text_field_tag :search, params[:search]
        = submit_tag "Search", :name => nil
        %br
        Search by Title or Tag Name (e.g. Fractions, Monomials)
