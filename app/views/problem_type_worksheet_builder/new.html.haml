- content_for :head do
  %title
    = "Worksheet Builder: #{@problem_type.title}"
  = stylesheet_link_tag "math_display", "problem_type", "worksheet_builder"


#worksheet-builder
  #title
    ="Worksheet Builder: #{@problem_type.title}"
  =form_tag(worksheet_builder_path) do 
    .problem-levels-display
      .title
        = label "worksheet_builder[title]", "Title"
        = text_field_tag "worksheet_builder[title]", nil, :size => 80
      = render :partial => "worksheet_builder/problem_type", :locals => {:problem_type => @problem_type}
      #create-worksheet-button
        = submit_tag "Create Worksheet"