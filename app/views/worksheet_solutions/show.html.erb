<% content_for :head do %>
  <title>Worksheet <%= @worksheet.id %> Solutions</title>
  <%= stylesheet_link_tag "worksheet", {:media => "print, screen"} %>
  <%= stylesheet_link_tag "print/worksheet", {:media => "print" } %>
<% end %>

<div class="worksheet" id="worksheet_<%= @worksheet.id %>">
  <%= link_to "Hide Solutions", worksheet_path(@worksheet) %> |
  <%= link_to "Edit Worksheet", edit_worksheet_path(@worksheet) %>
  <% current_index = 0 %>
  <% @worksheet.problem_groups.each do |group| %>
    <div class="problem_group">
    	<div class="instructions"><%= group.first.instruction.description %></div>
    	<% group.each do |worksheet_problem| %>
    		<%= render :partial => "worksheet_solutions/worksheet_problem_solution", :locals => { :worksheet => @worksheet, :math_problem => worksheet_problem.math_problem, :problem_number => current_index + 1 } %>
    		<% current_index += 1%>
    	<% end %>  	
    </div>
  <% end %>

</div>