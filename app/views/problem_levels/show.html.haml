- content_for :head do
  %title Problem Level
  = stylesheet_link_tag "math_display", "lessons"

.row
  = @problem_level.instruction.description
.row
  = "There are #{@math_problems.size} problems on this level:"
.math-display-row
  -@math_problems.each do |math_problem|
    .math-display
      .math-problem
        .math-problem-full
          .question_and_answer
            Question:
            =display_mathml_question(math_problem)
            Answer:
            =display_mathml_answer(math_problem)
          .problem_links
            =link_to 'Edit Problem', edit_math_problem_url(math_problem)

.row
  =link_to "Back to Problem Type", problem_type_path(@problem_level.problem_type)
  %br
  =link_to "Add New Problem to this Level", new_problem_type_problem_level_math_problem_url(@problem_level.problem_type, @problem_level.level_number)
  %br
