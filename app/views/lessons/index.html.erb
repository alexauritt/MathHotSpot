<h1>Listing lessons</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Chapter</th>
    <th>Section</th>
    <th>Subject</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lessons.each do |lesson| %>
  <tr>
    <td><%= lesson.title %></td>
    <td><%= lesson.chapter %></td>
    <td><%= lesson.section %></td>
    <td><%= lesson.subject_title %></td>
    <td><%= link_to 'Show', lesson_url(lesson) %></td>
    <td><%= link_to 'Edit', edit_admin_lesson_url(lesson) %></td>
    <td><%= link_to 'Destroy', admin_lesson_url(lesson), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

