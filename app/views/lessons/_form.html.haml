= simple_form_for(@lesson) do |f|
  - if @lesson.errors.any?
    #error_explanation
      %h2
        = "#{pluralize(@lesson.errors.count, 'error')} prohibited this lesson from being saved"
      #ul
        - @lesson.errors.full_messages.each do |msg|
          #li
            = msg
  .field
    = f.input :title
  .field
    = f.association :topic, :collection => all_topics
    %br
    = link_to "Create a new Topic", new_category_url
  .field
    = f.association :problem_types, :as => :check_boxes
    
  .actions
    = f.submit
