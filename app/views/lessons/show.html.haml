- content_for :head do
  %title
    = "Lesson: #{@lesson.title}"
  = stylesheet_link_tag "lessons", "math_display", "problem_type"

#container
  .lessons.long
    =render :partial => "lesson_header", :locals => { :lesson => @lesson }
    .math-display-row#problem_list
      -@problem_types.each do |problem_type|
        .math-display
          .problem-type-medium
            =render :partial => 'problem_types/problem_type', :locals => { :problem_type => problem_type }
    .math-display-row#add_new_problem_links
      =link_to "Edit this Lesson", edit_lesson_path(@lesson)    
      |
      =link_to "Create new Problem Type", new_problem_type_path
      |
      =link_to "Find a Problem Type for this Lesson", search_problem_types_path
  






